<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@color/mainColor">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/captains_earning_search"
                android:layout_width="400dp"
                android:layout_marginHorizontal="5dp"
                android:layout_height="50dp"
                android:background="@color/background"
                android:hint="Captain Name"
                android:textColor="@color/mainColor"
                android:textColorHint="#585858"
                android:textAlignment="center"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                />

        <TableLayout
            android:id="@+id/captain_earning_tabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:stretchColumns="0,1,2"
            android:layout_margin="9dp"
            android:layout_below="@id/captains_earning_search"

            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFF">

                <TextView
                    android:layout_width="75dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:background="@drawable/loginbut"
                    android:gravity="center"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000"
                    />

                <!--   <TextView
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:textAppearance="?android:attr/textAppearanceLarge"
                       android:text="Email "
                       android:layout_column="1"
                       android:background="@drawable/loginbut"
                       android:gravity="center"
                       />-->

                <TextView
                    android:layout_width="75dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:background="@drawable/loginbut"
                    android:gravity="center"
                    android:text="Country"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="75dp"
                    android:textSize="15dp"
                    android:layout_height="50dp"
                    android:layout_column="2"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:background="@drawable/loginbut"
                    android:gravity="center"
                    android:text=" city "
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="75dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_height="50dp"
                    android:layout_column="3"
                    android:background="@drawable/loginbut"
                    android:gravity="center"
                    android:text="mobile#"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="75dp"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_height="50dp"
                    android:layout_column="4"
                    android:background="@drawable/loginbut"
                    android:gravity="center"
                    android:text="Earning"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>


        </TableLayout>
        </RelativeLayout>
    </HorizontalScrollView>

</ScrollView>